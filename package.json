{
  "name": "ds-scripts-support",
  "displayName": "DS Scripts Support",
  "publisher": "majulizi",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/lsp/extension.js",
  "files": [
    "ds-service",
    "images",
    "lsp",
    "out",
    "syntaxes",
    "themes",
    "CHANGELOG.md",
    "language-configuration.json",
    "packge.json",
    "README.md",
    "package-lock.json"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ds",
        "aliases": [
          "DS script",
          "ds"
        ],
        "extensions": [
          ".ds"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ds",
        "scopeName": "source.ds",
        "path": "./syntaxes/ds.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "DialogueScripter Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/dialoguescripter-color-theme.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "18.16.19",
    "@types/vscode": "1.102.0",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "vscode-languageclient": "7.0.0",
    "vscode-languageserver": "7.0.0",
    "vscode-languageserver-textdocument": "1.0.8",
    "vscode-uri": "^3.1.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build-server": "cd DSService && dotnet publish -c Release -o ../ds-service/win-x64",
    "build-win-x64": "cd DSService && dotnet publish -c Release -r win-x64 -o ../ds-service/win-x64",
    "build-linux-x64": "cd DSService && dotnet publish -c Release -r linux-x64 -o ../ds-service/linux-x64",
    "build-osx-x64": "cd DSService && dotnet publish -c Release -r osx-x64 -o ../ds-service/osx-x64",
    "build-osx-arm64": "cd DSService && dotnet publish -c Release -r osx-arm64 -o ../ds-service/osx-arm64"
  }
}